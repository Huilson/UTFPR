<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="br.edu.utfpr.model.Pessoa">
        <table name="pessoa" schema="public" catalog="BancoIMC"/>
        <attributes>
            <id name="id">
                <column name="id" precision="-1"/>
            </id>
            <basic name="nome">
                <column name="nome"/>
            </basic>
            <basic name="altura"/>
            <basic name="idade"/>
            <basic name="IMC"/>
            <basic name="peso">
                <column name="peso"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
